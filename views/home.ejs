<%- include('partials/header.ejs') %>

    <div class="pt-10 flex item-center gap-2 justify-center w-full">
        <div class="w-2/3 flex flex-col justify-center item-center gap-2">
            <div class="text-end">
                <a class="border border-red-400 px-3 hover:bg-gray-100 rounded-lg" href="/add-contact-page">Add</a>
            </div>
            <table class="border border-gray-300 text-sm text-left">
                <thead class="bg-gray-100 text-gray-700 uppercase">
                    <tr>
                        <th class="px-4 py-2 border">ID</th>
                        <th class="px-4 py-2 border">First Name</th>
                        <th class="px-4 py-2 border">Last Name</th>
                        <th class="px-4 py-2 border">Phone</th>
                        <th class="px-4 py-2 border">Address</th>
                        <th class="px-4 py-2 border">Update</th>
                        <th class="px-4 py-2 border">Delete</th>
                    </tr>
                </thead>

                <tbody>
                    <% contacts.forEach((contact,index)=> { %>
                        <tr class="hover:bg-gray-50">
                            <td class="px-4 py-2 border">
                                <%= index +1 %>
                            </td>
                            <td class="px-4 py-2 border">
                                <%= contact.first_name %>
                            </td>
                            <td class="px-4 py-2 border">
                                <%= contact.last_name %>
                            </td>
                            <td class="px-4 py-2 border">
                                <%= contact.phone %>
                            </td>
                            <td class="px-4 py-2 border">
                                <%= contact.address %>
                            </td>
                            <td class="px-4 py-2 border">
                                <a href="/update-contact-page/<%= contact.id %>">Update</a>
                            </td>
                            <td class="px-4 py-2 border">
                                <a href="/delete-contact/<%= contact.id %>">Delete</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <div class="flex items-center justify-between border-t border-white/10 px-4 py-3 sm:px-6">
                <div class="flex flex-1 justify-between sm:hidden">
                    <a href="#"
                        class="relative inline-flex items-center rounded-md border border-white/10 bg-white/5 px-4 py-2 text-sm font-medium text-gray-900 hover:bg-white/10">Previous</a>
                    <a href="#"
                        class="relative ml-3 inline-flex items-center rounded-md border border-white/10 bg-white/5 px-4 py-2 text-sm font-medium text-gray-900 hover:bg-white/10">Next</a>
                </div>
                <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
                    <div>
                        <nav aria-label="Pagination" class="isolate inline-flex -space-x-px rounded-md">
                          <% let disabledClass = hasPrevPage ? "bg-green-300": "bg-none" %>
                            <a href="/?page=<%= prevPage %>"
                                class="relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 inset-ring inset-ring-gray-700 hover:bg-white/5 focus:z-20 focus:outline-offset-0 <%= disabledClass %>">
                                <span class="sr-only">Previous</span>
                                <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true"
                                    class="size-5">
                                    <path
                                        d="M11.78 5.22a.75.75 0 0 1 0 1.06L8.06 10l3.72 3.72a.75.75 0 1 1-1.06 1.06l-4.25-4.25a.75.75 0 0 1 0-1.06l4.25-4.25a.75.75 0 0 1 1.06 0Z"
                                        clip-rule="evenodd" fill-rule="evenodd" />
                                </svg>
                            </a>
                            <% for(let i = 1; i <= totalPages; i++) { %>
                            <a href="/?page=<%= i %>" aria-current="<%= i == currentPage ? 'page' : false %>" class="relative z-10 inline-flex items-center <%= i == currentPage ? 'bg-indigo-500 text-white' : 'text-yellow-500' %> px-4 py-2 text-sm font-semibold focus:z-20 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500"><%= i %></a>
                            <% } %>
                            <% let disabledClass2 = hasNextPage ? "bg-green-300": "bg-none" %>
                            <a href="/?page=<%= nextPage %>"
                                class="relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 inset-ring inset-ring-gray-700 hover:bg-white/5 focus:z-20 focus:outline-offset-0 <%= disabledClass2 %>">
                                <span class="sr-only">Next</span>
                                <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true"
                                    class="size-5">
                                    <path
                                        d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z"
                                        clip-rule="evenodd" fill-rule="evenodd" />
                                </svg>
                            </a>
                        </nav>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <%- include('partials/footer.ejs') %>