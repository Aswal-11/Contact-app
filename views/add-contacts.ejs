<%- include('partials/header.ejs') %>

    <form action="/add-contact" method="post" class="w-full flex justify-center item-center pt-6">
        <div class=" border p-px border-gray-700 rounded-lg ">
            <div class="p-4 flex gap-6 flex-col">
                <div class="flex gap-5">
                    <label for="first_name">First Name</label>
                    <div>
                        <input type="text" name="first_name" id="first_name"
                            class="border-2 border rounded-lg border-gray-500">
                    </div>
                </div>

                <div class="flex gap-5">
                    <label for="last_name">Last Name</label>
                    <div>
                        <input type="text" name="last_name" id="last_name"
                            class="border-2 border rounded-lg border-gray-500">
                    </div>
                </div>

                <div class="flex gap-5">
                    <label for="email">Email</label>
                    <div>
                        <input type="text" name="email" id="email" class="border-2 border rounded-lg border-gray-500">
                    </div>
                </div>

                <div class="flex gap-5">
                    <label for="phone">Phone</label>
                    <div>
                        <input type="text" name="phone" id="phone" class="border-2 border rounded-lg border-gray-500">
                    </div>
                </div>

                <div>
                    <label for="name">Address</label>
                    <textarea name="address" id="address" rows="3"
                        class="border-2 border rounded-lg border-gray-500 w-full"></textarea>
                </div>

                <div class="flex justify-end item-center pt-4 gap-5">
                    <button type="submit"
                        class="bg-blue-400 text-white text-md font-semibold  hover:bg-blue-700 py-1 px-3  rounded-lg">Save</button>
                    <a href="/"
                        class="bg-red-400  text-white text-md font-semibold  hover:bg-red-700 py-1 px-3  rounded-lg">Cancel</a>
                </div>
            </div>
        </div>
    </form>
<%- include('partials/footer.ejs') %>